<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="-30dp"
        android:orientation="horizontal"
        >

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:text="Introducción"
        android:textSize="20sp"/>



    <ScrollView
        android:id="@+id/vscroll1"
        android:layout_width="wrap_content"
        android:layout_height="632dp"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:paddingTop="4dp">

            <EditText
                android:id="@+id/TextoINTRO"
                android:layout_width="370dp"
                android:layout_height="380dp"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:autofillHints=""
                android:gravity="top"
                android:hint="Escribe un solo parrafo"
                android:inputType="textMultiLine"
                android:padding="36px"
                android:textColor="#1B1B1B"
                android:textColorHint="#607D8B"

                android:textSize="25px" />
            <TextView
                android:id="@+id/printro"
                android:textColor="#2196F3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="right"
                android:layout_marginLeft="14dp"
                android:text="Referencia"
                android:textSize="14sp"/>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="-155dp"
        android:orientation="horizontal"
        android:padding="8dp">


        <Button
            android:id="@+id/btnref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#764CD6"
            android:onClick="guardar_referencia"
            android:padding="8dp"
            android:text="Guardar referencia"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
        <Button
            android:id="@+id/btnextremo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#289F5E"
            android:onClick="guardar"
            android:padding="8dp"
            android:text="Guardar"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/edmanual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:padding="8dp"
            android:background="#B8863B"
            android:text="Cambiar el Léxico"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/vv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:padding="3dp">


        android:text="Guardar como nuevo punto de referencia"
        android:textSize="14sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/navv"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_marginTop="-35dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">



        <Button
            android:id="@+id/intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#2196F3"
            android:onClick="introbb"
            android:padding="8dp"

            android:text="Introducción"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/cuerpo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#2196F3"
            android:onClick="cuerpobb"
            android:padding="8dp"
            android:text="Cuerpo"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/conclucion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#2196F3"
            android:onClick="conclubb"
            android:padding="8dp"
            android:text="Conclusión"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>