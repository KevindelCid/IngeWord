<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nuevoProyecto"
    android:orientation="vertical">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnnuevop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listo"
            android:layout_gravity="right"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresa los datos para tu proyecto"
            android:layout_marginTop="100px"
            android:layout_marginLeft="5dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nombre de tu Proyecto"
            android:layout_gravity="center"
            android:layout_marginTop="100px"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tu nombre completo"
            android:layout_gravity="center"
            android:layout_marginTop="40px"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tu correo electrónico"
            android:layout_gravity="center"
            android:layout_marginTop="40px"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nombre del catedrático o asesor"
            android:layout_gravity="center"
            android:layout_marginTop="40px"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Titulo del trabajo"
            android:layout_gravity="center"
            android:layout_marginTop="40px"
            />




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>