<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/btnnp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:background="#2196F3"
        android:text="Crear un Proyecto..."
        android:textSize="15sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:text="Cuerpo"
        android:textSize="20sp"/>


    <ScrollView
        android:id="@+id/vscroll1"
        android:layout_width="wrap_content"
        android:layout_height="632dp"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:paddingTop="4dp">

            <EditText
                android:id="@+id/TextoINTRO"
                android:layout_width="370dp"
                android:layout_height="400dp"
                android:layout_gravity="top"
                android:layout_marginTop="0dp"
                android:autofillHints=""
                android:gravity="top"
                android:hint="Escribe un solo parrafo"
                android:inputType="textMultiLine"
                android:padding="30px"
                android:textColor="#1B1B1B"
                android:textColorHint="#607D8B"

                android:textSize="25px" />


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="-155dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/btnextremo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#BF5636"
            android:onClick="guardar"
            android:padding="8dp"
            android:text="Guardar"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:padding="8dp"
            android:background="#34C53A"
            android:text="modo manual"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/navv"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#2196F3"
            android:onClick="introbb"
            android:padding="8dp"
            android:text="Introducción"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/cuerpo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#2196F3"
            android:onClick="cuerpobb"
            android:padding="8dp"
            android:text="Cuerpo"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/conclucion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#2196F3"
            android:onClick="conclubb"
            android:padding="8dp"
            android:text="Conclusión"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>